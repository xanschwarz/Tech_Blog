<!-- User's posts -->
{{#each posts as |post| }}
<div class="mt-4 mx-4 post">
    <ul role="list" class="space-y-4">
        <li class="bg-white px-4 py-6 shadow sm:p-6 sm:rounded-lg">
            <article aria-labelledby="question-title-81614">
                <div class="flex justify-between">
                    <h2 id="question-title-81614" class="text-base font-medium text-gray-900">
                        {{post.title}}
                    </h2>
                    {{!-- <time class="text-sm text-gray-500">{{post.user.username}} {{format_date
                        post.date_created}}</time> --}}
                    <div class="text-sm text-gray-500">{{format_date post.date_created}}</div>
                </div>
            </article>
        </li>
    </ul>
</div>
{{/each}}


