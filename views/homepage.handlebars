<!-- The Tech Blog banner -->
<div class="md:flex md:items-center md:justify-between bg-gray-800">
    <div class="flex-1 min-w-0">
        <!-- Text size doesn't change?? -->
        <h1 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:truncate m-3">
            The Tech Blog
        </h1>
    </div>
</div>

<!-- Posts -->
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="mt-4 mx-4">
    <ul role="list" class="space-y-4">
        <li class="bg-white px-4 py-6 shadow sm:p-6 sm:rounded-lg">
            <article aria-labelledby="question-title-81614">
                <div>
                    <h2 id="question-title-81614" class="text-base font-medium text-gray-900">
                        {{post.title}}
                    </h2>
                    <div class="flex justify-between">
                        <div class="ml-4 text-sm font-medium text-gray-900">
                            - {{post.user.username}}
                        </div>
                        <div class="text-sm text-gray-500">
                            <div>{{format_date post.date_created}}</div>
                        </div>
                    </div>
                </div>
                <div class="mt-2 text-sm text-gray-700 space-y-4">
                    <p>{{post.content}}</p>
                </div>
            </article>
        </li>
    </ul>
</div>
{{/each}}